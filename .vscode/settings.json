{
	"[typescript]": {
		"editor.formatOnSave": false
	},
	"[typescriptreact]": {
		"editor.formatOnSave": false
	},
	// Allow formatting for other languages
	"editor.formatOnSave": true,
	// Let ESLint (incorporating Prettier errors) format code on save
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	}
}